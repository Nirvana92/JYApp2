<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ccffffff"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical" >
    
    <android.support.v7.widget.GridLayout 
        		  xmlns:app="http://schemas.android.com/apk/res-auto"
        		  style="@style/layout.Xy"
        		  android:layout_weight="1"
        		  app:rowCount="3"
        		  app:columnCount="2"
        		  app:useDefaultMargins="true"
        		  >
        
        <TextView style="@style/layout.xy"
            	  android:text="姓名："
            	  android:textSize="14sp"
            	  android:textColor="#000000" />
        
        <TextView android:id="@+id/tvCustomerName"
            	  style="@style/layout.xy"
            	  android:text="张三"
            	  android:textSize="14sp"
            	  android:textColor="#000000" />
        <TextView style="@style/layout.xy"
            	  android:text="联系方式："
            	  android:textSize="14sp"
            	  android:textColor="#000000" />
        <TextView android:id="@+id/tvCutomerPhone"
            	  style="@style/layout.xy"
            	  android:text="0791-03124578"
            	  android:textSize="14sp"
            	  android:textColor="#000000" />
        <TextView style="@style/layout.xy"
            	  android:text="身份号码："
            	  android:textSize="14sp"
            	  android:textColor="#000000" />
        <TextView android:id="@+id/tvCustomerIDCard"
            	  style="@style/layout.xy"
            	  android:text="36015654887789654"
            	  android:textSize="14sp"
            	  android:textColor="#000000" />

    </android.support.v7.widget.GridLayout>
    
    <LinearLayout style="@style/layout.xy"
                  android:orientation="vertical"
                  android:layout_marginLeft="10dp"
                  android:gravity="center_vertical">
        
        <Button style="@style/layout.xy"
            	android:minHeight="0dp"
            	android:minWidth="0dp"
            	android:layout_marginBottom="2dp"
            	android:gravity="center"
            	android:background="@drawable/sel_btn_orange"
            	android:text="修改"
            	android:textColor="#ffffff"
            	android:textSize="15sp" />
        
         <Button style="@style/layout.xy"
            	android:minHeight="0dp"
            	android:minWidth="0dp"
            	android:layout_marginTop="2dp"
            	android:gravity="center"
            	android:background="@drawable/sel_btn_gray"
            	android:text="注销"
            	android:textColor="#ffffff"
            	android:textSize="15sp" />
        
    </LinearLayout>

</LinearLayout>
